<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/boder_upcoming"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="@dimen/_20sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="@dimen/_8sdp"
        android:layout_marginStart="20dp"
        android:layout_gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#FFFFFF"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearUpcomingPatient"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="10dp"
                    android:textColor="#AEAEAE"
                    android:text="Medication"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewTabletName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:textColor="#07518F"
                    android:textSize="15sp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:textStyle="bold" />

            </LinearLayout>



            <LinearLayout
                android:id="@+id/linearUpcomingPatient3"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_below="@id/linear1"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="10dp"
                    android:textColor="#AEAEAE"
                    android:text="Repeat"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewDaysOfTablet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:textColor="#07518F"
                    android:textSize="15sp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearUpcomingPatient"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/linearUpcomingPatient2"
                    android:layout_width="@dimen/_160sdp"
                    android:orientation="vertical"
                    android:layout_below="@id/linearUpcomingPatient"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="10dp"
                        android:textColor="#AEAEAE"
                        android:text="To be taken"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textViewTimeOfTablet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:textColor="#07518F"
                        android:textSize="15sp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:textStyle="bold" />
                </LinearLayout>


            <LinearLayout
                android:id="@+id/linearUpcomingPatient4"
                android:layout_width="@dimen/_125sdp"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="10dp"
                    android:textColor="#AEAEAE"
                    android:text="Dosage"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewDosage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:textColor="#07518F"
                    android:textSize="15sp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:textStyle="bold" />
            </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearUpcomingPatient5"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_below="@id/linearUpcomingPatient3"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="10dp"
                    android:textColor="#AEAEAE"
                    android:text="Frequency"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_30sdp"
                    android:layout_below="@+id/linearLayout4">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/_1sdp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/morning"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="@dimen/_12sdp"
                            android:text="0"
                            android:drawablePadding="@dimen/_15sdp"
                            android:drawableStart="@drawable/calnderupcoming"
                            android:textColor="#07518F"
                            android:padding="@dimen/_8sdp"/>
                        <TextView
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="match_parent"
                            android:background="#07518F"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            />
                        <TextView
                            android:id="@+id/afternoon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:drawablePadding="@dimen/_15sdp"
                            android:textSize="@dimen/_12sdp"
                            android:text="0"
                            android:drawableStart="@drawable/clockupcoming"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:textColor="#07518F"
                            android:padding="@dimen/_8sdp"/>
                        <TextView
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="match_parent"
                            android:background="#07518F"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            />
                        <TextView
                            android:id="@+id/night"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:drawablePadding="@dimen/_15sdp"
                            android:textSize="@dimen/_12sdp"
                            android:text="0"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:drawableStart="@drawable/clockupcoming"
                            android:textColor="#07518F"
                            android:padding="@dimen/_8sdp"/>
                    </LinearLayout>


                </androidx.cardview.widget.CardView>



            </LinearLayout>




        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>